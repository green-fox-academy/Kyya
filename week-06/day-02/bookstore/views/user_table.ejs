<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  <style>body { display: flex; justify-content: center; }</style>
  <title>User</title>
</head>
<body>
<div class="ui container">
  <table class="ui celled table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Prefix</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Height</th>
        <th>BitcoinAddress</th>
        <th>ColorPreference</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { _%>
        <tr>
          <td><%= user.ID %></td>
          <td><%= user.Prefix %></td>
          <td><%= user.FirstName %></td>
          <td><%= user.LastName %></td>
          <td><%= user.Address %></td>
          <td><%= user.Height %></td>
          <td><%= user.BitcoinAddress %></td>
          <td style="color: <%= user.ColorPreference %>;"><%= user.ColorPreference %></td>
        </tr>
      <% }) _%>
    </tbody>
  </table>
</div>
</body>
</html>
